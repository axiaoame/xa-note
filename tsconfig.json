{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": false,
    "sourceMap": false,
    "types": [
      "@cloudflare/workers-types"
    ],
    "lib": [
      "ES2022",
      "WebWorker"
    ]
  },
  "include": [
    "functions/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "assets"
  ]
}