{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "../dist-server",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": [
    "**/*.ts",
    "../types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../dist",
    "../dist-server"
  ]
}
